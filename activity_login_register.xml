<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register"
    android:background="@drawable/img_6">


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="430dp"
        android:fontFamily="@font/varela_round"
        android:text="Never cut the wings of women, let them fly and spread the fragrance "
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="202dp"
        android:layout_height="236dp"
        app:srcCompat="@drawable/img_1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="114dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        tools:layout_editor_absoluteY="172dp" />


    <TextView
        android:id="@+id/signin"
        android:textColor="@color/black"
        android:fontFamily="@font/varela_round"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/teal_700"
        android:text="SIGNIN /"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="90dp"
        android:onClick="Signin_msg"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:textColor="@color/black"
        android:fontFamily="@font/varela_round"
        android:backgroundTint="@color/teal_700"
        android:text=" SIGNUP"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="550dp"
        android:onClick="Signup_msg"
        tools:ignore="OnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to be continue"
        android:layout_marginTop="550dp"
        android:fontFamily="@font/varela_round"
        android:layout_marginLeft="215dp"/>


</RelativeLayout>