<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scheme"
    android:background="@drawable/img_6">


    <ImageView
        android:layout_width="175dp"
        android:id="@+id/ImageScheme"
        android:layout_height="265dp"
        android:src="@drawable/img_24"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"/>


    <TextView
        android:id="@+id/Scheme_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHEMES FOR WOMEN"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/ImageScheme"
        android:textSize="20dp"

        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp">

        <TextView
            android:id="@+id/SchemeText_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PMMVY : "
            android:layout_marginTop="160dp"
            android:layout_below="@+id/Scheme_women"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Scheme_1"
            android:text="@string/hyperlink"
            android:layout_below="@+id/SchemeText_1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/SchemeText_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIRBHAYA SCHEMME"
            android:layout_below="@+id/Scheme_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="7dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Scheme_2"
            android:text="@string/hyperlink2"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/SchemeText_2"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/SchemeText_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WOMEN HELPLINE"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Scheme_3"
            android:text="@string/hyperlink3"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@+id/SchemeText_3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/SchemeText_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAHILA SHAKTI KENDRA :"
            android:layout_below="@id/Scheme_3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Scheme_4"
            android:text="@string/hyperlink4"
            android:textSize="20dp"
            android:layout_below="@+id/SchemeText_4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />


    </LinearLayout>

</RelativeLayout>