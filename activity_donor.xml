<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donor"
    android:background="@drawable/img_6">

    <TextView
        android:id="@+id/donote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate The Mother's Milk Here"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:hint="Name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:id="@+id/name_donor"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="email id"
            android:layout_below="@+id/name_donor"
            android:id="@+id/email_donor"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="age"
            android:layout_below="@+id/email_donor"
            android:id="@+id/age_donor"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="ph_number"
            android:layout_below="@+id/email_donor"
            android:id="@+id/ph_donor"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="address"
            android:layout_below="@+id/ph_donor"
            android:id="@+id/address_donor"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="Health issues"
            android:layout_below="@+id/address_donor"
            android:id="@+id/health_issue"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:hint="Medication Adherence"
            android:layout_below="@+id/health_issue"
            android:id="@+id/medication_ad"
            />

    </LinearLayout>

    <Button
        android:id="@+id/Submit_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="@color/teal_700"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="650dp"/>

    <Button
    android:id="@+id/Search"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Search"
    android:backgroundTint="@color/teal_700"
    android:layout_marginLeft="220dp"
    android:layout_marginTop="650dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:id="@+id/pic"
        android:layout_marginTop="90dp"
        android:text="Select picture"
        android:layout_marginLeft="100dp"
        android:backgroundTint="@color/teal_700"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="300dp"/>





</RelativeLayout>